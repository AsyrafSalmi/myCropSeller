<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/bestsell_img"
        android:layout_width="280dp"
        android:layout_height="190dp"
        app:riv_corner_radius="14dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/offers3"/>

        <TextView
            android:id="@+id/bestsell_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Best Selling Product"
            android:textSize="17dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/bestsell_des"
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:text="Description"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:src="@drawable/ratingbar"
                android:layout_marginStart="-5dp"/>
            <TextView
                android:id="@+id/bestsell_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="5.0"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/bestsell_disc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Discount 20% Off"
                android:textColor="#B0E945"
                android:textStyle="bold"
                android:gravity="end"
                />
        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>